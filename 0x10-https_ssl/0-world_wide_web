#!/usr/bin/env bash
# This script retrieves and displays the DNS A record information for specified subdomains

# Function to fetch and display subdomain DNS information
get_subdomain_info() {
    local domain=$1
    local sub=$2
    local full_subdomain="${sub}.${domain}"

    # Run dig command and parse output
    record_info=$(dig "${full_subdomain}" +short)

    if [[ -n "$record_info" ]]; then
        echo "The subdomain ${sub} is a A record and points to ${record_info}"
    else
        echo "The subdomain ${sub} has no A record found"
    fi
}

# Main logic
domain=$1
subdomain=$2

# Check if domain is provided
if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

# When only domain is provided
if [[ -z "$subdomain" ]]; then
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info "$domain" "$sub"
    done
else
    get_subdomain_info "$domain" "$subdomain"
fi

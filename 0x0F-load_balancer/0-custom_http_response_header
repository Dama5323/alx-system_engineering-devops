#!/usr/bin/env bash
# Script to install Nginx, customize 404 page, add redirect, and set HTTP header

# Update and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create basic index.html
echo "Hello World!" | sudo tee /var/www/html/index.html

# Create a custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Backup nginx config
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Add 301 redirect inside server block
sudo sed -i "/server_name _;/a \\trewrite ^/redirect_me https://github.com/besthor permanent;" /etc/nginx/sites-available/default

# Add custom 404 page and handler
sudo sed -i "/listen 80 default_server;/a \\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}" /etc/nginx/sites-available/default

# Add custom HTTP header with hostname
sudo sed -i "/server_name _;/a \\tadd_header X-Served-By $(hostname);" /etc/nginx/sites-available/default

# Test config and restart Nginx
sudo nginx -t && sudo systemctl restart nginx

#!/usr/bin/env bash
# Bash script to configure a 301 redirection for /redirect_me

# Exit on any error
set -e

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Create a simple Hello World index page
echo "Hello World!" > /var/www/html/index.html

# Define the redirect rule
# Replace the 'server_name _;' line with this new block that includes the redirection
redirect_block="server_name _;\n\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"

# Apply the change in the default Nginx site config
sed -i "s/server_name _;/$redirect_block/" /etc/nginx/sites-available/default

# Restart Nginx using service (not systemctl)
service nginx restart

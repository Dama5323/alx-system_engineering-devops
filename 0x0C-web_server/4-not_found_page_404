#!/usr/bin/env bash
# Configures a custom 404 page with Nginx that returns "Ceci n'est pas une page"

# Install Nginx
apt-get update -y
apt-get install -y nginx

# Create custom 404 file
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Remove any existing 404 config to avoid conflicts
sed -i '/error_page 404/d' /etc/nginx/sites-available/default
sed -i '/location \/ {/a \
    error_page 404 /custom_404.html;\n\
    location = /custom_404.html {\n\
        internal;\n\
    }' /etc/nginx/sites-available/default

# Reload Nginx
nginx -t && service nginx reload

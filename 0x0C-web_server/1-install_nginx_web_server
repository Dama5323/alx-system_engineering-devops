#!/usr/bin/env bash
# Sets up a web server on Ubuntu 16.04 to serve "Hello World!" using Nginx

set -e

# Update package list
apt-get update -y -qq

# Install Nginx
apt-get install -y nginx

# Allow HTTP traffic through UFW (ignore error if ufw not installed or disabled)
ufw allow 'Nginx HTTP' || true

# Start Nginx without using systemctl
service nginx start

# Replace default index page with Hello World!
echo "Hello World!" > /var/www/html/index.html

# Restart Nginx the same way
service nginx restart

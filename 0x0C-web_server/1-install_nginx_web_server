#!/usr/bin/env bash
# Sets up a web server on Ubuntu 16.04 to serve "Hello World!" using Nginx

set -e

# Update package list
apt-get update -y

# Install nginx
apt-get install -y nginx

# Start nginx using service
service nginx start

# Replace index.html with exact content
echo 'Hello World!' > /var/www/html/index.html

# Restart nginx
service nginx restart

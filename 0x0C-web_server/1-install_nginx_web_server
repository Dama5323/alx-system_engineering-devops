#!/usr/bin/env bash
# Script to install and configure Nginx web server to return 'Hello World!'

# Exit immediately if a command exits with a non-zero status
set -e

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Ensure nginx is started using service (NOT systemctl)
service nginx start || true

# Replace default index.html with custom Hello World! page
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Optionally make sure it's owned by www-data
chown www-data:www-data /var/www/html/index.nginx-debian.html

